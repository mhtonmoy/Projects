#include<stdio.h>
#include<math.h>
int a,b;
void program();              //function Prototype
int add();                   //function Prototype
int sub();                  //function Prototype
int mul();                  //function Prototype
float div();                //function Prototype
float modulus();            //function Prototype
double power();             //function Prototype
float squareroot();         //function Prototype
float cubeRoot();           //function Prototype
float farenheit();         //function Prototype
float celcius();           //function Prototype
int main()
{
    int choice,P,Q,R,V;
    float S,T,W,X,M,N;
    program();
    while(1)
    {
        printf("\nEnter your choice: ");
        scanf("%d",&choice);
        switch(choice)
        {
        case 1:
            P = add();       //function calling
            printf("\nThe Summation of a and b is = %d\n",P);
            break;
        case 2:
            Q = sub();       //function calling
            printf("\nThe Subtraction of a and b is = %d\n",Q);
            break;
        case 3:
            R = mul();       //function calling
            printf("\nThe Multiplication of a and b is = %d\n",R);
            break;
        case 4:
            S = div();       //function calling
            printf("\nThe Division of a and b is = %f\n",S);
            break;
        case 5:
            T = modulus();   //function calling
            printf("\nThe Modulus of a and b is = %f\n",T);
            break;
        case 6:
            V = power();     //function calling
            printf("\nPower of a given number is = %d\n",V);
            break;
        case 7:
            W = squareroot();  //function calling
            printf("\nSquareRoot of a given number is = %f\n",W);
            break;
        case 8:
            X = cubeRoot();    //function calling
            printf("\nCubeRoot of a Given Number is = %f\n",X);
            break;
        case 9:
            M = farenheit();   //function calling
            printf("\nFarenheit of the Celcius value is = %f\n",M);
            break;
        case 10:
            N = celcius();     //function calling
            printf("\nCelcius of the Farenheit value is = %f\n",N);
            break;
        default :
            printf("\nInvalid Option\n");
            printf("\nPlease Enter an available options\n\n");
            program();
        }
    }

    return 0;
}
void program()
{

    printf("==========================================\n\n\n");
    printf(" 1. Addition of Two Numbers\n\n");
    printf(" 2. Subtraction of Two Numbers\n\n");
    printf(" 3. Multiplication of Two Numbers\n\n");
    printf(" 4. Division of Two Numbers\n\n");
    printf(" 5. Modulus of Two Numbers\n\n");
    printf(" 6. Power of a Given Numbers\n\n");
    printf(" 7. SquareRoot of a Given Numbers\n\n");
    printf(" 8. CubeRoot of a Given Numbers\n\n");
    printf(" 9. Find Farenheit from Celcius\n\n");
    printf(" 10. Find celcius from Fareheit\n\n\n");
    printf("==========================================\n\n\n");
}

/*--Addition Function--*/

int add()        //function definition
{
    int sum;
    printf("\nEnter the value of a & b: ");
    scanf("%d%d",&a,&b);
    sum = a + b;
    return sum;
}

/*--Subtraction Function--*/

int sub()        //function definition
{
    int sub;
    printf("\nEnter the value of a & b: ");
    scanf("%d%d",&a,&b);
    sub = a - b;
    return sub;
}

/*--Multiplication Function--*/

int mul()        //function definition
{
    int mul;
    printf("\nEnter the value of a & b: ");
    scanf("%d%d",&a,&b);
    mul = a * b;
    return mul;
}

/*--Division Function--*/

float div()      //function definition
{
    float div;
    printf("\nEnter the value of a & b: ");
    scanf("%d%d",&a,&b);
    div = (float)a/b;
    return div;
}

/*--Modulus Function--*/

float modulus()  //function definition
{
    float mod;
    printf("\nEnter the value of a & b: ");
    scanf("%d%d",&a,&b);
    mod = a%b;
    return mod;
}

/*--Power Function--*/

double power()      //function definition
{
    double power;
    printf("\nEnter the value of value & power: ");
    scanf("%d\n%d",&a,&b);
    power = pow(a,b);
    return power;
}

/*--SquareRoot Function--*/

float squareroot()     //function definition
{
    float p;
    printf("\nEnter the value of a: ");
    scanf("%d",&a);
    p = sqrt(a);
    return p;
}

/*--CubeRoot Function--*/

float cubeRoot()       //function definition
{
    float p;
    printf("\nEnter the value of a: ");
    scanf("%d",&a);
    p = cbrt(a);
    return p;
}

/*--Farenheit Function--*/

float farenheit()      //function definition
{
    float f;
    printf("\nEnter the value of Celcius: ");
    scanf("%f",&a);
    f = ((a*9)/5)+32;
    return f;
}

/*--Celcius Function--*/

float celcius()        //function definition
{
    float c;
    printf("\nEnter the value of Fareheit: ");
    scanf("%f",&a);
    c = ((a-32)*5)/9;
    return c;
}
